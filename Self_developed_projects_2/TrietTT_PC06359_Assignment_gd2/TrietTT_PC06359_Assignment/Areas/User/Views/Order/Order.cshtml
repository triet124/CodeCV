
@{
    ViewData["Title"] = "Orders";
}
@model List<Orders>

<hr />
<h3 class="text-center highlight" color="red">HÓA ĐƠN</h3>
<hr />
<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">
        <div class="card rounded-3 mb-4">
         @foreach(var item in Model)
         {
            <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
                @* ảnh *@
              <div class="col-md-4 col-lg-3 col-xl-3">
                <img
                  src="\Image\Car\@item.Cars.HinhAnh"
                  class="img-fluid rounded-3">
              </div>

              @* thông tin sản phẩm *@
              <div class="col-md-4 col-lg-3 col-xl-3">
                    <p class="lead fw-normal mb-2">@item.Cars.Ten</p>
                    <p><span class="text-muted">Loại: @item.Cars.Categories.TenLoai</span><br />
                </p>
              </div>

              @* Xem chi tiết *@
              <div class="col-md-4 col-lg-3 col-xl-3">
              <a href="/User/Order/OrderDetails/@item.OrderID" class="btn btn-outline-warning btn-lg ms-3">Chi tiết</a>
              </div>
            </div>
          </div>
                    }
          
    </div>
  </div>
</section>
