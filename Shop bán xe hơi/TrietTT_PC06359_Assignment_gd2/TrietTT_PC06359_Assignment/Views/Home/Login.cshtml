@model TrietTT_PC06359_Assignment.Models.Customers

<hr />
<h1 class="text-center" style="color: red">Đăng nhập</h1>
<div class="card card-body">
    <legend class="fw-bold">Login</legend>
    <div>Please fill in form</div>
    <hr />
    <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label"></label>
                <input asp-for="MatKhau" type="password" class="form-control" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <button type="submit" value="Login" class="btn btn-primary">Login</button>
            </div>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
                <h4 class="text-danger mt-2">
                    @ViewBag.ErrorMessage
                </h4>
        }
        </form>
    <div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

